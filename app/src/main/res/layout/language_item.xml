<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llLang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/item_border_selector"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivFlags"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:gravity="start"
            android:padding="6dp"
            android:src="@drawable/india"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/tvRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.3dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:scaleX="-1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLanguageCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/tvRadio"
            android:fontFamily="@font/poppins_semi_bold"
            android:gravity="start"
            android:padding="6dp"
            android:text="en"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLanguages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toRightOf="@+id/ivFlags"
            android:layout_toLeftOf="@+id/tvRadio"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:gravity="start"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:paddingLeft="5dp"
            android:paddingTop="15dp"
            android:paddingRight="5dp"
            android:paddingBottom="15dp"
            android:text="@string/language"
            android:textColor="#424242"
            android:textSize="14sp" />
    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
